<% elsif @cook.cooklist_id == 4 %>
var imageSrc = "/images/chicken.png";
<% elsif @cook.cooklist_id == 5 %>
var imageSrc = "/images/coffee.png";
<% end %>
    
for (var i = 0; i < positions.length; i ++) {
    
